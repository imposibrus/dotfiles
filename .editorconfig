# http://editorconfig.org
root = true

[*]
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.sh,.gitconfig,.gitattributes,.aliases,config,*.localrc}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[{*.yaml,*.yml}]
indent_size = 2
